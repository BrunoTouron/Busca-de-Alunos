@model Busca_de_Alunos2.Models.Aluno


@{

    ViewBag.Title = "Localização";
}

<h2>@Html.DisplayFor(model => model.Nome)</h2>

@Html.HiddenFor(model => model.Lat)
@Html.HiddenFor(model => model.Lng)

<div id="map-canvas" style="width: 960px; height: 600px"></div>

<script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>

<script type="text/javascript">

    var lat = parseFloat(document.getElementById('Lat').value);
    var lng = parseFloat(document.getElementById('Lng').value);

    //var lat = -19.212355602107472;
    //var lng = -44.20234468749999;

    var map;
    function initialize() {
        var mapOptions = {
            zoom: 8,
            center: new google.maps.LatLng(lat, lng),
            //center: new google.maps.LatLng(-34.397, 150.644)
            //center: new google.maps.LatLng(-23.223,-45.900)
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        map = new google.maps.Map(document.getElementById('map-canvas'),
            mapOptions);

        var marker = new google.maps.Marker({
            position: new google.maps.LatLng(lat, lng),
            title: "Aqui",
            map: map
        });


    }

    google.maps.event.addDomListener(window, 'load', initialize);

</script>

